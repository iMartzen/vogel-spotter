[Unit]
Description=vogel-spotter service
After=docker.service
Requires=docker.service

[Service]
WorkingDirectory=/opt/vogel-spotter/
ExecStartPre=/usr/bin/docker compose down --volumess --remove-orphans
ExecStart=/usr/bin/docker compose up --build -d
ExecStop=/usr/bin/docker compose down --volumes --remove-orphans
Restart=always
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target